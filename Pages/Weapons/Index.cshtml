@page
@model D2RItems.Models.Weapons.IndexModel

@{
    ViewData["Title"] = "Weapon Bases";
}

<h1 class="text-center">Weapon Bases</h1>

<table class="table table-border" style="border-color:rgb(69, 69, 69, 0.4);">
    <thead>
        <tr>
            <th class="text-center">
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].Name)
                </a>
            </th>
            <th class="text-center">
                <a asp-page="./Index" asp-route-sortOrder="@Model.TierSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].Tier)
                </a>
            </th>
            <th class="text-center">
                <a asp-page="./Index" asp-route-sortOrder="@Model.TypeSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].Type)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SocketsSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].Sockets)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.OneHandDmgSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].OneHandDmg)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TwoHandDmgSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].TwoHandDmg)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.SpeedSort">
                    @Html.DisplayNameFor(model => model.Weapons[0].Speed)
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Weapons)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" id="name-col-item">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Sockets)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.OneHandDmg)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TwoHandDmg)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Speed)
                </td>
                @*<td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
            </tr>
        }
    </tbody>
</table>
